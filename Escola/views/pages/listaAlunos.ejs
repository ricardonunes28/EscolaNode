<%- include("../partials/header"); %>
    <section class="container">
        <section class="row">
            <section class="col">
                <section class="row mt-5">
                    <section class="col-6">
                        <h1>Lista de Alunos</h1>

                    </section>
                    <section class="col-6">
                        <a href="listaAlunos/cadastrarAlunos" class="btn btn-primary">Inserir alunos</a>
                    </section>
                    <form action="listaAlunos/pesquisa" method="GET">
                        <input  type="search" name="pesquisa">
                        <button class="btn btn-outline-success" type="submit">Pesquisar</button>
                    </form>
                </section>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Idade</th>
                            <th>Serie do Aluno</th>
                            <th>ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% listaAlunos.forEach(function(aluno){ %>
                            <tr>
                                <td><%=aluno.nome %></td>
                                <td><%=aluno.idadeAluno %></td>
                                <td><%=aluno.Serie %></td>
                                <td>
                                    <a href="/listaAlunos/editarAluno/<%=aluno.id %>" class="btn btn-warning">Editar</a>
                                    <a class="btn btn-danger " type="button" data-toggle="modal" data-target="#modalExemplo">
                                        Deletar</a>
                                </td>
                            </tr>
                            <section class="modal fade" id="modalExemplo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <section class="modal-dialog" role="document">
                                  <section class="modal-content">
                                    <section class="modal-header">
                                      <h5 class="modal-title" id="exampleModalLabel">Tem certeza disso!</h5>
                                      <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                        <span aria-hidden="true">&times;</span>
                                      </button>
                                    </section>
                                    <section class="modal-body">
                                      Ao clicar em <strong>DELETAR</strong>, você confirma que deseja apagar as informações registradas.
                                    </section>
                                    <section class="modal-footer">
                                      <button type="button" class="btn btn-warning" data-dismiss="modal">Fechar</button>
                                      <a href="/listaAlunos/deletarAluno/<%=aluno._id %>" type="button" class="btn btn-danger">Deletar</a>
                                    </section>
                                  </section>
                                </section>
                              </section>

                        <%  }) %>
                        <% if(listaAlunos == 0) { %>
                            <tr>
                                <td class="text text-uppercase"><mark>NENHUM ALUNO CADASTRADO</mark></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </section>
        </section>
    </section>
    <%- include("../partials/footer") %>