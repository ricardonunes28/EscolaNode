<body>

    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5">Cadastramento de Alunos</h1>
                <form action="/cadastrarAlunos" method="POST">
                    <div class="form-group">
                        <laberl for="nome">Nome</laberl>
                        <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome do aluno">
                    </div>
                    <div class="form-group">
                        <label for="idade">Idade</label>
                        <input type="number" class="form-control" id="idade" name="idade" placeholder="10">
                    </div>
                    <div class="form-group">
                        <label for="serieA">Serie do aluno</label>
                        <input type="text" class="form-control" id="serieA" name="serieA" placeholder="5 serie">
                    </div>

                    <button  class="btn btn-primary" type="submit" >Enviar</button>
                </form>
            </div>
        </div>

    </div>


